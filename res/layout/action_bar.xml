<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actionbar_layout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/action_bar_height"
    android:background="@drawable/action_bar_bg" >

    <ImageButton
        android:id="@+id/action_bar_back_btn"
        android:layout_width="@dimen/action_bar_height"
        android:layout_height="@dimen/action_bar_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/action_bar_bg_press"
        android:scaleType="centerInside"
        android:src="@drawable/action_bar_back" />

    <ImageButton
        android:id="@+id/action_bar_switch_btn"
        android:layout_width="@dimen/action_bar_height"
        android:layout_height="@dimen/action_bar_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="35dp"
        android:background="@drawable/action_bar_bg_press"
        android:scaleType="centerInside"
        android:src="@drawable/action_bar_switch_camera" />

    <ImageButton
        android:id="@+id/action_bar_flash_btn"
        android:layout_width="@dimen/action_bar_height"
        android:layout_height="@dimen/action_bar_height"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/action_bar_switch_btn"
        android:background="@drawable/action_bar_bg_press"
        android:scaleType="centerInside"
        android:src="@drawable/action_bar_flash_auto" />

</RelativeLayout>